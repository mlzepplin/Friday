<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rishabh.friday.AddNewItem">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/addItemEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/addItemMessage"
                android:layout_marginTop="36dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="Enter Label"
                android:textColor="#e154a4" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addItemButton"
                android:background="#f88ba1"
                android:layout_gravity="center_horizontal|bottom"
                android:focusableInTouchMode="false"
                android:focusable="false"

                android:text="ADD"
                tools:text="ADD"
                android:contentDescription="ADD"
                android:layout_marginTop="83dp"
                android:layout_below="@+id/addItemEditText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="36dp"
                android:layout_marginStart="36dp" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/exitButton1"
                android:background="#f88ba1"
                android:layout_gravity="center_horizontal|bottom"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:onClick="exitButton2"
                android:text="CANCEL"
                tools:text="CANCEL"
                android:contentDescription="CANCEL"
                android:layout_alignBaseline="@+id/addItemButton"
                android:layout_alignBottom="@+id/addItemButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="41dp"
                android:layout_marginEnd="41dp" />


        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
