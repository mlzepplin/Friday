<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rishabh.friday.AddNewItem">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addItemEditText"
                android:focusableInTouchMode="true"
                android:textColor="#e154a4"
                android:focusable="true"
                android:layout_below="@+id/addItemMessage"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="36dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addItemButton"
                android:background="#f88ba1"
                android:layout_gravity="center_horizontal|bottom"
                android:focusableInTouchMode="false"
                android:focusable="false"

                android:text="ADD"
                tools:text="ADD"
                android:contentDescription="ADD"
                android:layout_below="@+id/addItemEditText"
                android:layout_alignLeft="@+id/addItemMessage"
                android:layout_alignStart="@+id/addItemMessage"
                android:layout_marginTop="78dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter Item"
                android:id="@+id/addItemMessage"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal|top"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Enter Label"
                android:contentDescription="Enter " />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
