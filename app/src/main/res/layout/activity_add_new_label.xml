<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.arps.imean.MeaningDisplay"
    android:background="#ffffff"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:scrollbarAlwaysDrawVerticalTrack="true">



    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/addDescriptionEditText"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="68dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="#f7e1e1"
            android:maxLines = "35"
            android:contentDescription="Enter Label"
            android:focusableInTouchMode="true"
            android:scrollbars = "vertical"
            android:textColor="#000000"
            android:focusable="true" />


    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addLabelEditText"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="68dp"
                android:focusableInTouchMode="true"
                android:textColor="#e154a4"
                android:focusable="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addNoteButton"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="#f88ba1"
                android:layout_gravity="center_horizontal|bottom"
                android:focusableInTouchMode="false"
                android:focusable="false"
                android:text="ADD"
                tools:text="ADD"
                android:contentDescription="ADD" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enter label "
                android:id="@+id/addLabelMessage"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal|top"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Enter Label"
                android:contentDescription="Enter Label" />
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>